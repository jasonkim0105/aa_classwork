<form action="/cats" method="post">
  <input type="hidden" name="_method" value = "PATCH">

  <label for="birth_date">Birth_Date</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">

  <label for="color">Color</label>
  <select name="cat[color]">
  <option disabled>-- Select --</option>
  <option value="black"<% @cat.color == "black" ? "selected" : ""%> >Black</option>
  <option value="white"<% @cat.color == "white" ? "selected" : ""%> >White</option>
  <option value="yellow"<% @cat.color == "yellow" ? "selected" : ""%> >Yellow</option>
  <option value="brown"<% @cat.color == "brown" ? "selected" : ""%> >Brown</option>
  </select>

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= @cat.name %>">

  <label for="sex">Sex</label>
  <label for="M">M:</label>
  <input id="M" type="Radio" name="cat[sex]" value="M" <% @cat.sex == "M" ? "checked" : "" %> >
  <label for="F">F:</label>
  <input id="F" type="Radio" name="cat[sex]" value="F" <% @cat.sex == "F" ? "checked" : "" %> >



  <label for="description">Description</label>
  <input id="description" type="textarea" name="cat[description]" value="<%= @cat.description %>">

  <input type="submit" value="Create Cat">
</form>